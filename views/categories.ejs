<%- include('partials/layout', { 
      title: 'Categories', 
      user: user,
      body: `
  <div class="container">
    <h2 class="mt-4">Select a Category</h2>
    <div class="list-group mt-3">
      ${categories.length === 0 ? `
        <p class="alert alert-warning">No categories available.</p>
      ` : categories.map(category => `
        <a href="/files/category/${category}" class="list-group-item list-group-item-action">
          ${category}
        </a>
      `).join('')}
    </div>
  </div>
` }) %>
