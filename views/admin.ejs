<% var pageTitle = 'Admin Panel'; %>
<%- include('partials/layout', { title: pageTitle, user: (typeof user !== 'undefined' ? user : {}) }) %>

<div class="my-4">
    <h2>Admin Panel</h2>
    <p>Welcome, <%= user && user.username ? user.username : 'Guest' %>!</p>

    <div class="card mb-4">
        <div class="card-header">Upload File</div>
        <div class="card-body">
            <form action="/files/upload" method="POST" enctype="multipart/form-data">
                <label for="file">Upload File:</label>
                <input type="file" name="file" id="file" class="form-control-file" required>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>
    </div>

    <h3>Uploaded Files</h3>
    <% if (typeof files !== 'undefined' && files.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Filename</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                <% files.forEach(function(file) { %>
                    <tr>
                        <td><%= file.filename %></td>
                        <td><%= file.title ? file.title : 'Untitled' %></td>
                        <td><%= file.description ? file.description : 'No description' %></td>
                        <td><%= file.category ? file.category : 'Uncategorized' %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No files uploaded yet.</p>
    <% } %>

    <a href="/files" class="btn btn-secondary">Back to Dashboard</a>
</div>
