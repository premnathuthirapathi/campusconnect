<!-- views/files.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Files</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    ul { list-style-type: none; padding: 0; }
    li { margin-bottom: 20px; padding: 10px; border: 1px solid #ccc; }
    .file-info { margin-bottom: 10px; }
    .actions a { margin-right: 10px; }
  </style>
</head>
<body>
  <h1>Welcome, <%= user.username %>!</h1>
  <h2>Uploaded Files</h2>
  <ul>
    <% files.forEach(file => { %>
      <li>
        <div class="file-info">
          <p><strong>Title:</strong> <%= file.title || "Untitled" %></p>
          <p><strong>Description:</strong> <%= file.description || "No description provided." %></p>
        </div>
        <div class="actions">
          <!-- Link to view the file inline -->
          <a href="/files/view/<%= file._id %>" target="_blank">View</a>
          <!-- Link to download the file -->
          <a href="/files/<%= file._id %>">Download</a>
        </div>
      </li>
    <% }) %>
  </ul>

  <% if (user.role === 'admin') { %>
    <h3>Upload a New File</h3>
    <form action="/files/upload" method="POST" enctype="multipart/form-data">
      <label for="title">Title:</label>
      <input type="text" name="title" id="title" required />
      <br/><br/>
      <label for="description">Description:</label>
      <input type="text" name="description" id="description" required />
      <br/><br/>
      <label for="file">Choose File:</label>
      <input type="file" name="file" id="file" required />
      <br/><br/>
      <button type="submit">Upload File</button>
    </form>
  <% } %>

  <br/>
  <a href="/logout">Logout</a>
</body>
</html>
