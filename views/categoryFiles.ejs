<% 
  const pageTitle = category.charAt(0).toUpperCase() + category.slice(1) + ' Files'; 
%>
<%- include('partials/layout', { 
      title: pageTitle, 
      user: user,
      body: `
  <div class="my-4">
    <h2>${pageTitle}</h2>
    ${message ? `<div class="alert alert-info">${message}</div>` : `
      <div class="list-group">
        ${files.map(file => `
          <a href="/files/view/${file._id}" class="list-group-item list-group-item-action">
            <h5>${file.title || 'Untitled'}</h5>
            <p>${file.description || 'No description provided.'}</p>
          </a>
        `).join('')}
      </div>
    `}
    <a href="/files" class="btn btn-secondary mt-3">Back to Dashboard</a>
  </div>
` }) %>
